<div class="container mt-3">
    <form asp-controller="Home" asp-action="IncomeTaxCalculation" method="post">
        <div class="row">
            <!-- Card 1: Informações Pessoais -->
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Informações Pessoais</h5>
                        <div class="mb-3">
                            <label for="name" class="form-label">Nome Completo</label>
                            <input type="text" class="form-control" id="name" name="Nome" placeholder="Digite seu nome" required>
                        </div>
                        <div class="mb-3">
                            <label for="cpf" class="form-label">CPF</label>
                            <input type="text" class="form-control" id="cpf" placeholder="Digite seu CPF">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 2: Renda Anual/Bruta -->
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Renda Anual/Bruta</h5>
                        <div class="mb-3">
                            <label for="RendaAnual" class="form-label">Renda Total (R$)</label>
                            <input type="number" class="form-control" id="RendaAnual" name="RendaAnual" step="0.01" placeholder="Ex: 50000" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 3: Deduções -->
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Deduções</h5>
                        <div class="mb-3">
                            <label for="dependents" class="form-label">Dependentes</label>
                            <input type="number" class="form-control" id="dependents" name="Dependentes" placeholder="Quantidade" required>
                        </div>
                        <div class="mb-3">
                            <label for="Deducoes" class="form-label">Deduções Extras (R$)</label>
                            <input type="number" class="form-control" id="Deducoes" name="Deducoes" step="0.01" placeholder="Valor gasto">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card 4: Resultado -->
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Resultado</h5>
                        @if (ViewBag.Imposto > 0)
                        {
                            <div class="alert alert-info mt-3">
                                <strong>O imposto calculado é:</strong> @ViewBag.Imposto.ToString("C")
                            </div>
                        }
                        @if (ViewBag.Imposto == null)
                        {
                            <p class="text-muted">O cálculo será exibido aqui.</p>
                        }
                        @if (ViewBag.Imposto == 0)
                        {
                            <p class="alert alert-info mt-3" style="text-align:center"><strong>Insento</strong></p>
                        }
                    </div>
                </div>
            </div>

        </div>

        <!-- Botão de Enviar -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success rounded-pill px-4">Calcular Imposto</button>
        </div>
    </form>
</div>
