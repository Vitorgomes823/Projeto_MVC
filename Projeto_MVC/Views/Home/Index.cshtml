@model HomeModel

@{
    ViewData["Title"] = "Fi Group Finance";
}

<body class="text-center" style="justify-content:center">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="text-danger" style="margin-bottom:5px">@error.ErrorMessage</div>
    }
    <main class="form-signin card">
        <form asp-action="Login" method="post">
            <input type="hidden" name="_method" value="PATCH" />
            <img class="mb-4" src="https://static.vagas.com.br/portais-de-carreira/images/headers/original/fi-group-logo-com-a-escrita-em-azul.png?1653657031" alt="" width="120" height="57">
            <h1 class="h3 mb-3 fw-normal">Inovação Financeira</h1>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="username" placeholder="adm.vh@fi-group.com">
                <label for="floatingInput">Endereço de Email</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="imaginaumasenha">
                <label for="floatingPassword">Digite sua Senha</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Lembre de mim
                </label>
            </div>
            <button class="btn btn-primary rounded-pill px-3" type="submit">Entrar</button>
            <br />
            <button class="btn btn-primary rounded-pill px-3 mt-2" type="submit" asp-controller="Home" asp-action="SignUp">Criar Conta</button>
        </form>
    </main>
</body>
